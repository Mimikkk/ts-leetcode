{
  "tasks": {
    "test": {
      "description": "Run tests",
      "cmd": "deno test"
    }
  },
  "imports": {
    "@shared/": "./src/shared/"
  },
  "lint": {
    "rules": {
      "exclude": ["no-namespace", "no-explicit-any"]
    }
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 120,
      "semiColons": true,
      "singleQuote": true,
      "proseWrap": "always"
    }
  }
}
