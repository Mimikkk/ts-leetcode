{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    }
  }
}
